
@{
    ViewBag.Title = "Contacto";
    Layout = "~/Views/Master/Publico.cshtml";
}
<br />
<br />
<div class="parallax">
    <img src="../../../Style/img/Contactanos.png" style="width:500px; height:200px;" class="parallax" />
</div>
<div>
    <div class="container">
        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success col-md-12" style="text-align:center;" role="alert">
                <strong>¡BIEN!</strong> Su mensaje ha sido enviado con éxito. <strong>Pronto nos contactaremos con usted.</strong>
            </div>
        }
        @if (ViewBag.error != null)
        {
            <div class="alert alert-danger col-md-12" style="text-align:center;" role="alert">
                <strong>¡OOPS!</strong> Al parecer hubo un error intentalo de nuevo más tarde.
            </div>
        }
        @using (Ajax.BeginForm("EnviarMensaje", "Publico", new AjaxOptions { HttpMethod = "POST" }, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="card mb-5 wow fadeInUp" data-wow-delay=".4s">
                <div class="card-body p-5">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="md-form">
                                        <input class="form-control" id="nombre" type="text" name="asunto" required="required" />
                                        <label for="name">Asunto</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="md-form">
                                        <input class="form-control" id="email" type="text" name="nombre" required="required" />
                                        <label for="email">Nombre</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="md-form">
                                        <input class="form-control" id="email" type="tel" name="telefono" required="required" />
                                        <label for="email">Teléfono</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="md-form">
                                        <input class="form-control" id="subject" type="text" name="correo" required="required" />
                                        <label for="subject">Correo Electrónico</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="md-form">
                                        <textarea class="md-textarea" id="message" name="mensaje" required="required"></textarea>
                                        <label for="message">Mensaje</label>
                                    </div>
                                </div>
                            </div>
                            <div class="center-on-small-only mb-4">
                                <button class="btn acento ml-0" type="submit"><i class="fa fa-paper-plane-o mr-2"></i> Enviar</button>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <ul class="list-unstyled text-center">
                                <li class="mt-4">
                                    <i class="fa fa-map-marker indigo-text fa-2x"></i>
                                    <p class="mt-2">Calle 23a #332 x 18 y 20, San Jose Vergel, Mérida, Yúcatan México</p>
                                </li>
                                <li class="mt-4">
                                    <i class="fa fa-phone acentotext indigo-text fa-2x"></i>
                                    <p class="mt-2">+52 999-145-02-12</p>
                                </li>
                                <li class="mt-4">
                                    <i class="fa fa-envelope acentotext indigo-text fa-2x"></i>
                                    <p class="mt-2">ventas@papeleriamerida.com.mx</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script>
        function init_map() {

            var var_location = new google.maps.LatLng(20.950401, -89.590112);

            var var_mapoptions = {
                center: var_location,

                zoom: 14
            };

            var var_marker = new google.maps.Marker({
                position: var_location,
                map: var_map,
                title: "New York"
            });

            var var_map = new google.maps.Map(document.getElementById("map-container"),
                var_mapoptions);

            var_marker.setMap(var_map);

        }

        google.maps.event.addDomListener(window, 'load', init_map);
</script>


