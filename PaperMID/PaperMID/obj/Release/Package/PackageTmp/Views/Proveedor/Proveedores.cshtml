
@{
    ViewBag.Title = "Proveedores";
    Layout = "~/Views/Master/Administrador.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <em class="fa fa-home"></em>
                </a>
            </li>
            <li class="active">Administrador</li>
        </ol>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Proveedores</h2>
        </div>
    </div><!--/.row-->


    <div class="row">
        <div class="col-lg-12">
            @using (Ajax.BeginForm("Agregar", "Proveedor", new AjaxOptions { HttpMethod = "POST" }, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="panel panel-default">
                    <div class="panel-heading">Agregar Proveedor</div>
                    <div class="panel-body">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Código</label>
                                <input class="form-control" type="text" disabled>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label>Nombre</label>
                                <input class="form-control" name="nombre" type="text">
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label>Teléfono</label>
                                <input class="form-control" name="telefon" type="tel">
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Correo Electrónico</label>
                                <input class="form-control" name="correo" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-md btn-info" value="Guardar" />
                            <br />
                            <br />
                        </div>
                    </div>
                </div><!-- /.panel-->
            }
        </div><!-- /.panel-->
    </div><!-- /.col-->
    @{ Html.RenderAction("MostrarListaProveedor", "Proveedor");}
    <div class="col-sm-12">
        <p class="back-link">PaperMID de <a href="#">Papelería Mérida</a></p>
    </div>
</div><!-- /.row -->
        <!--/.main-->
