
@{
    ViewBag.Title = "Promociones";
    Layout = "~/Views/Master/Administrador.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <em class="fa fa-home"></em>
                </a>
            </li>
            <li class="active">Administrador</li>
        </ol>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Promociones</h2>
        </div>
    </div><!--/.row-->


    <div class="row">
        <div class="col-lg-12">
            @using (Ajax.BeginForm("Agregar", "Proveedor", new AjaxOptions { HttpMethod = "POST" }, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="panel panel-default">
                    <div class="panel-heading">Datos</div>
                    <div class="panel-body">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Código</label>
                                <input class="form-control" name="cod" type="text" disabled>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Nombre</label>
                                <input class="form-control" name="nombre" type="text">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Fecha de Inicio</label>
                                <input class="form-control" name="fchini" type="date">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Fecha de Terminación</label>
                                <input class="form-control" name="fchfin" type="date">
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Descuento</label>
                                <input class="form-control" name="desc" type="text">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Proveedor</label>
                                <select class="form-control" name="prov">
                                    <option value="47">Barrilito</option>
                                    <option value="48">Delta</option>
                                    <option value="49">Granmark</option>
                                    <option value="50">Bic</option>
                                    <option value="51">Navitek</option>
                                    <option value="52">Kole</option>
                                    <option value="53">Indra/option>
                                    <option value="54">Dietrix</option>
                                    <option value="55">First Class</option>
                                    <option value="56">Mussa</option>
                                    <option value="57">Ribocel</option>
                                    <option value="58">Picelitos</option>
                                    <option value="59">Mae</option>
                                    <option value="60">Artline</option>
                                    <option value="61">A-ink</option>
                                </select>

                            </div>

                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Descripción</label>
                                <textarea class="form-control" name="comentario" rows="4"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-md btn-info" value="Guardar" />
                            <br />
                            <br />
                        </div>
                    </div>
                </div><!-- /.panel-->
            }
        </div><!-- /.panel-->
    </div><!-- /.col-->
    @{ Html.RenderAction("ListarPromociones","Promocion");}
    <div class="col-sm-12">
        <p class="back-link">PaperMID de <a href="#">Papelería Mérida</a></p>
    </div>
</div><!-- /.row -->
<!--/.main-->
